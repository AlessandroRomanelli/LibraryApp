doctype
html(lang='en')
  include ./templates/head
  include ./templates/nav-header
  body
    h1 New Loan
    form(action='/loans/create' method="POST")
      p
        label(for='book_id') Book
        select#book_id( name="book_id")
          each book in data.books
            option(value=`${book.id}`)=book.title
      p
        label(for='patron_id') Patron
        select#patron_id(name="patron_id")
          each patron in data.patrons
            option(value=`${patron.id}`) #{patron.first_name} #{patron.last_name}
      p
        label(for='loaned_on') Loaned on:
        input#loaned_on(type='date', value=date min=date name="loaned_on")
      p
        label(for='return_by') Return by:
        input#return_by(type='date', value=returnDate min=date name="return_by")
      p
        input(type='submit', value='Create New Loan')
